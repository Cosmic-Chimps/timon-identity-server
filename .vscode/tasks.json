{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/TimonIdentityServer/TimonIdentityServer.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/TimonIdentityServer/TimonIdentityServer.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/src/TimonIdentityServer/TimonIdentityServer.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "appId": "timon-identity-server",
            "appPort": 5000,
            "label": "daprd-debug",
            "type": "daprd",
            "dependsOn": "build",
            "componentsPath": "./components",
            "enableMetrics": false,
            "grpcPort": 50002,
            "httpPort": 3502
        },
        {
            "appId": "timon-identity-server",
            "label": "daprd-down",
            "type": "daprd-down"
        }
    ]
}
